<!DOCTYPE html>
 <html lang="en">
     <head>
         <title>Social Giving Home</title>
         <meta name="viewport" content="width=device-width, initial-scale=1.0">
         <!-- Bootstrap -->
         <link href="bootstrap/css/bootstrap-responsive.css" rel="stylesheet" media="screen">
         <!--CSS -->
         <link rel="stylesheet" type="text/css" href="signon.css">
     </head>
     <body>
        <!-- <script src="http://code.jquery.com/jquery.js"></script>
         <script src="js/bootstrap.min.js"></script>-->
         <div id="topnav">
             <table class="mainhead">
                 <tr>
                     <td id="name">Social Giving</td>
					<td>
						<%= form_for("user", :url => user_session_path, :html => { :class => "form-horizontal well"}) do |f| %>
								<%= f.email_field :email, :autofocus => true, :placeholder => "email", :class => "topnav"%>
                     </td>
                     <td>
						<%= f.password_field :password, :placeholder => "password", :class => "topnav"%>
                     </td>
					<div id="submit">
						<%= f.submit "Sign in", :class=> "btn btn-primary"%>
					</div>
					<% end %>
                 </tr>
             </table>
         </div>
         <p class="signup">Sign Up Today</p>
         <table class="signup">
             <tr>
                 <td>
					<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|  %>
                     <%= f.text_field :email, :placeholder => "name"%>
                 </td>
                 <td>
             </tr>
             <tr>
                 <td>
                     <%= f.email_field :email, :autofocus => true, :placeholder => "email", :class=>"signinfo"%>
                 </td>
                 <td>
                    <%= f.password_field :password, :placeholder => "password",:class=>"signinfo"%>
                 </td>
             </tr>
             <tr>
                 <td>
                     <%= f.password_field :password, :placeholder => "password reconfirmation", :class=>"signinfo"%>
                 </td>
                 <td>
                     <%= f.text_field :university, :placeholder => "University", :class=>"signinfo"%>
                 </td>
             </tr>
			<tr>
				<td>
					<%= f.text_field :phonenumber, :placeholder => "phone", :class=>"signinfo"%>
				</td>
			</tr>
         </table>
			<%= f.submit "Sign up", :class=>"btn btn-primary"%>
			<% end %>
         </div>
     </body>
 </html>
